package method;

import java.util.Scanner;
import method;

public class main {

	public static void main(String[] args) {
		
		Scanner a = new Scanner(System.in);		
		System.out.println("Input first number");
		double num1 = a.nextDouble();
		
		Scanner b = new Scanner(System.in);		
		System.out.println("Choose an operation:\nType + for addition\nType - for subtraction\nType * for multiplication\nType / for division\n");
		String operator = b.next();
		
		Scanner c = new Scanner(System.in);		
		System.out.println("Input second number");
		double num2 = c.nextDouble();
		

		
		switch(operator) {
		    case "+":
		        double sum = addition(num1 ,num2);
		        System.out.println(sum);
		    	break;
		    case "-":
		    	double o2 = subtraction(num1 ,num2);
		        System.out.println(o2);
		    	break;
		    case "*":
		    	double o3 = multiplication(num1 ,num2);
		        System.out.println(o3);
		    	break;
		    case "/":
		    	double o4 = division(num1 ,num2);
		        System.out.println(o4);
		    	break;
		}
		
//		public static double addition(double x,double y) {
//			return x+y);
//		}
//		if (operator == "+") {
//		System.out.println(num1+num2);
//		}
//		else if (operator == "-") {
//		System.out.println(num1-num2);
//		}
//	public static double operation(double[] op) {
//		if (operator == "+") {
//			System.out.println(addition());
//		
//	}
//}
	}

	private static double addition(double num1, double num2) {
		// TODO Auto-generated method stub
		return num1+num2;
	}
	private static double subtraction(double num1, double num2) {
		// TODO Auto-generated method stub
		return num1-num2;
	}
	private static double multiplication(double num1, double num2) {
		// TODO Auto-generated method stub
		return num1*num2;
	}
	private static double division(double num1, double num2) {
		// TODO Auto-generated method stub
		return num1/num2;
	}
}